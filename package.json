{
    "name": "pdfjs-annotation-extension-for-react",
    "version": "0.2.3",
    "description": "A lightweight, extensible React PDF annotator and viewer built on top of PDF.js. Supporting the editing of existing PDF file annotations, posting comments, replying, submitting annotation data, and loading for further editing.",
    "keywords": [
        "pdf",
        "viewer",
        "annotation",
        "react",
        "pdfjs"
    ],
    "author": "Laomai<codefee@foxmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Laomai-codefee/pdfjs-annotation-extension-for-react.git"
    },
    "bugs": {
        "url": "https://github.com/Laomai-codefee/pdfjs-annotation-extension-for-react/issues"
    },
    "homepage": "https://github.com/Laomai-codefee/pdfjs-annotation-extension-for-react#readme",
    "type": "module",
    "main": "dist/index.cjs.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.es.js",
            "require": "./dist/index.cjs.js"
        },
        "./style": "./dist/pdfjs-annotation-extension-for-react.css"
    },
    "sideEffects": [
        "*.css",
        "*.scss"
    ],
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "build:lib": "vite build",
        "build:docs": "vitepress build docs",
        "preview": "vite preview",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "prepare": "husky install",
        "prepublishOnly": "npm run build && npm run test"
    },
    "dependencies": {
        "@floating-ui/dom": "^1.7.4",
        "@radix-ui/themes": "^3.2.1",
        "exceljs": "^4.4.0",
        "file-saver": "^2.0.5",
        "i18next": "^25.6.3",
        "konva": "^9.3.14",
        "nanoid": "^5.1.6",
        "pdf-lib": "^1.17.1",
        "pdfjs-dist": "~4.3.136",
        "react-colorful": "^5.6.1",
        "react-i18next": "^16.3.4",
        "react-icons": "^5.5.0",
        "web-highlighter": "^0.7.4",
        "zustand": "^4.4.4"
    },
    "peerDependencies": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.1.4",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.5.1",
        "@types/file-saver": "^2.0.7",
        "@types/jest": "^29.5.8",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "@vitejs/plugin-react": "^4.1.1",
        "autoprefixer": "^10.4.16",
        "eslint": "^8.53.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.4",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^15.0.2",
        "postcss": "^8.4.31",
        "prettier": "^3.0.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sass-embedded": "^1.93.3",
        "ts-jest": "^29.1.1",
        "typescript": "^5.2.2",
        "vite": "^7.2.2",
        "vite-plugin-dts": "^3.6.3",
        "vitepress": "^1.0.0-rc.25"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,css,md}": [
            "prettier --write"
        ]
    }
}
